<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/orangeback"
    android:orientation="vertical"
    android:weightSum="1">


    <ImageView
        android:id="@+id/name"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:background="@drawable/branding"
        android:scaleType="fitEnd"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/logo"
        android:scaleType="fitEnd"
        android:visibility="visible"
        android:layout_below="@+id/name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <ImageButton
        android:id="@+id/btn_width"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:cropToPadding="true"
        android:scaleType="fitCenter"

        android:background="@drawable/horizontal"
        android:layout_marginBottom="124dp"
        android:layout_above="@+id/btn_album"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/btn_height"
        android:layout_width="55dp"
        android:layout_height="55dp"

        android:background="@drawable/vertical"
        android:layout_marginBottom="39dp"
        android:layout_above="@+id/btn_width"
        android:layout_alignLeft="@+id/btn_width"
        android:layout_alignStart="@+id/btn_width" />

    <ImageButton
        android:id="@+id/btn_set"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/setting"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp" />

    <ImageButton
        android:id="@+id/btn_abt"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/about"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp"
        android:layout_alignTop="@+id/btn_set"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:id="@+id/btn_album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/album"
        android:layout_alignBottom="@+id/btn_set"
        android:layout_centerHorizontal="true" />

</RelativeLayout>